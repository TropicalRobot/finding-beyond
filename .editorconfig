#
# EditorConfig settings.
#
# http://editorconfig.org/
#

root = true

# General

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Ruby

[*.{rb,cap}]
indent_size = 2

# Gems & Capistrano

[{Gemfile,Gemfile.lock,Capfile}]
indent_size = 2

# NPM

[{package.json,npm-shrinkwrap.json}]
indent_size = 2
